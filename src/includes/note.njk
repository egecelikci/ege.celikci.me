{%- set isDetailView = layout == 'note' -%}

{% if isDetailView %}
  {%- set note = page -%}
{% else %}
  {%- set tags = note.data.tags -%}
{% endif %}


{%- set webmentionUrl -%}{{ note.url | url | absoluteUrl(site.url) }}{%- endset -%}
{%- set mentionCount = webmentions.children | webmentionCountByType(webmentionUrl, "in-reply-to", "mention-of") -%}
{%- set likeCount = webmentions.children | webmentionCountByType(webmentionUrl, "like-of") -%}
{%- set repostCount = webmentions.children | webmentionCountByType(webmentionUrl, "repost-of") -%}

<div class="note {% if isDetailView %}note--detail{% endif %} h-entry">
  <div class="note__main">
    <div class="note__meta">
      <time
        class="note__date dt-published"
        datetime="{{ note.date | dateToISO }}"
      >
        {{ note.date | readableDate('dd LLL yyyy HH:mm') }}
      </time>
      {% if tags %}
        <div class="note__tags">
          {% for tag in tags %}
            <span class="note__tag">{{ tag }}</span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
    <div class="note__content">
      <div class="e-content p-name markdown">
        {% if isDetailView %}
          {% if title %}<h1 class="note__title">{{ title }}</h1>{% endif %}
          {{ content | safe }}
        {% else %}
          <a
            href="{{ note.url }}"
            class="note__link"
            aria-label="View note: {{ note.data.title or 'Note from ' ~ (note.date | readableDate('dd LLL yyyy')) }}"
          >
            {% if note.data.title %}
              <h2 class="note__title">{{ note.data.title }}</h2>
            {% endif %}
          </a>

          {{ note.templateContent | excerpt(note.data.previewLength) | safe }}
        {% endif %}
      </div>
    </div>
  </div>
  <div class="note__footer">
    <ul class="note__stats">
      <li
        class="note__stats__item note__stats__item--mentions"
        title="{{ mentionCount }} mentions"
      >
        {% icon "message", useInlineIcons %}{{ mentionCount }}
      </li>
      <li
        class="note__stats__item note__stats__item--reposts"
        title="{{ repostCount }} reposts"
      >
        {% icon "repeat", useInlineIcons %}{{ repostCount }}
      </li>
      <li
        class="note__stats__item note__stats__item--likes"
        title="{{ likeCount }} likes"
      >
        {% icon "heart", useInlineIcons %}{{ likeCount }}
      </li>
    </ul>
  </div>
  {% if isDetailView %}
    <div class="note__webmentions">{% include 'webmentions.njk' %}</div>
  {% else %}
    <a href="{{ note.url }}" class="note__link__overlay">
      <span class="sr-only">View Note</span>
    </a>
  {% endif %}
</div>
