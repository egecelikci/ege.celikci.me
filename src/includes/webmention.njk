<div
  class="webmention {% if webmention|isOwnWebmention %}webmention--own{% endif %}"
  id="webmention-{{ webmention['wm-id'] }}"
>
  <div class="webmention__meta">
    {% if webmention.author %}
      <a
        class="webmention__author h-card u-url"
        {% if webmention.url %}
          href="{{ webmention.url }}"
        {% endif %}
        target="_blank"
        rel="ugc nofollow"
      >
        {% if webmention.author.photo %}
          <img
            class="webmention__author__photo u-photo"
            src="{{ webmention.author.photo }}"
            alt=""
            width="96"
            height="96"
            loading="lazy"
          />
        {% else %}
          <svg
            class="webmention__author__photo"
            role="img"
            aria-hidden="true"
            width="48"
            height="48"
          >
            <use
              xmlns:xlink="http://www.w3.org/1999/xlink"
              xlink:href="/assets/icons/icons.sprite.svg#svg-avatar"
            >
            </use>
          </svg>
        {% endif %}
        <strong class="p-name">{{ webmention.author.name }}</strong>
      </a>
    {% endif %}

    {% if webmention.published %}
      <span class="webmention__meta__divider" aria-hidden="true">&sdot;</span>
      <time
        class="webmention__pubdate dt-published"
        datetime="{{ webmention.published }}"
      >
        {{ webmention.published | dateFromISO | readableDate("dd LLL yyyy") }}
      </time>
    {% endif %}
  </div>
  <div class="webmention__content p-content">
    {{ webmention.content.value | safe }}
  </div>
</div>
