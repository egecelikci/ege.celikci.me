---
layout: base
tags: nav
title: notes
eleventyNavigation:
  key: notes
  order: 4
permalink: notes/{% if pagination.pageNumber %}{{ pagination.pageNumber }}/{% endif %}
pagination:
  data: collections.notes
  size: 10
  alias: notes
---

<div class="page page--notes">
  <header class="page__header">
    <div class="page__header-content">
      <h1 class="page__title">{{ title }}</h1>

      {# View Toggle Buttons #}
      <div class="notes-view-toggle" role="group" aria-label="View options">
        <button
          class="notes-view-toggle__btn is-active"
          data-view="list"
          aria-pressed="true"
          aria-label="List view"
        >
          {% icon "list" %}
          <span>List</span>
        </button>
        <button
          class="notes-view-toggle__btn"
          data-view="grid"
          aria-pressed="false"
          aria-label="Grid view"
        >
          {% icon "grid" %}
          <span>Grid</span>
        </button>
      </div>
    </div>
  </header>

  <div class="page__content">
    {% if notes | length %}
      <ol
        reversed
        class="notelist js-infinitescroll-container"
        id="notes-container"
      >
        {% for note in notes %}
          <li
            class="notelist__item js-infinitescroll-item"
            data-note-id="{{ loop.index }}"
          >
            {# Grid View Item - Will be populated by JS #}
            <div class="note-grid-item" style="display: none;"></div>

            {# List View Item - Will be wrapped with gallery class by transform #}
            <div class="note-social-grid" id="gallery-{{ loop.index }}">
              {% include 'note.njk' %}
            </div>
          </li>
        {% endfor %}
      </ol>

      <nav class="js-infinitescroll-pagination">
        {% if pagination.nextPageHref %}
          <a
            href="{{ pagination.nextPageHref }}"
            class="js-infinitescroll-next"
          >
            next page
          </a>
        {% endif %}
      </nav>
    {% else %}
      <p class="lead">No Notes yet.</p>
    {% endif %}
  </div>
</div>
