{{ set tag = as || "div" }}
{{ set maxWidth = width || "max-w-narrow" }}

{{
  set classList = [
    "w-full",
    "px-4",
    "md:w-[90%]",
    "md:px-0",
    "mx-auto",
    maxWidth,
    classes,
  ].filter(Boolean).join(" ")
}}

<{{ tag }} class="{{ classList }}">
{{ content |> safe }}
</{{ tag }}>
